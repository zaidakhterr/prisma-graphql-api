generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Author {
  id    Int    @default(autoincrement()) @id
  name  String
  email String @unique
  books Book[]
}

model Book {
  id       Int    @default(autoincrement()) @id
  title    String
  authorId Int
  author   Author @relation(fields: [authorId], references: [id])
}
